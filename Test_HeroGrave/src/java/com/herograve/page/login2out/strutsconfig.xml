<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="com.herograve.page.login2out" extends="struts-default">
        <action name="Login" class="com.herograve.page.login2out.Login">
            <result>/page/${url}</result>
            <result name="index">/welcome.jsp</result>            
            <result name="login">/page/login.jsp</result>
        </action> 
        <action name="Logout" class="com.herograve.page.login2out.Logout">
            <result>/page/${url}</result>
            <result name="index">/welcome.jsp</result>
        </action>
        <!--
        <action name="Image" class="com.herograve.page.login2out.Image">
            <result type="stream"></result>
        </action>         
        -->
        
    </package>   
    
</struts>
