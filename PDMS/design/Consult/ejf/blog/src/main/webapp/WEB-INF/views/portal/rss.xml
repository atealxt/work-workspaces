<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
	<channel>
		<title>$!blog.title</title>
		<link>$!blog.domain</link>
		<Description>$!title RSS</Description>
		<language>zh-cn</language>
		<copyright>Copyright 2006-2008 wlr.easyjf.com</copyright>
		#foreach( $doc in $list)
		<item>
			<link>
				<![CDATA[$!{blog.domain}/portal.ejf?cmd=topicShow&id=$!doc.id]]> 
			</link>
			<title>
				$!doc.title
			</title>
			<pubDate>$!doc.inputTime</pubDate>
			<description>
			#if(!$doc.intro)$CommUtil.substring($doc.content,100)#else $doc.intro #end
			</description>
		</item>
		#end
	</channel>
</rss>