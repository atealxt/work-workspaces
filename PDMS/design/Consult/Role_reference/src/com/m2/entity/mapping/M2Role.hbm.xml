<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.m2.entity">
  <class name="Role" table="M2_Role">
    <id name="id" column="ID" type="java.lang.Integer">
      <generator class="native"></generator>
    </id>

    <property name="name" column="NAME" type="string" length="50"/>
    <property name="type" column="TYPE" type="string" length="10"/>
    <property name="description" column="DESCRIPTION" type="string" length="100"/>
    <property name="functions" column="FUNCTIONS"  type="com.m2.usertype.hibernate.IntegerSplitList"/>

  </class>

</hibernate-mapping>