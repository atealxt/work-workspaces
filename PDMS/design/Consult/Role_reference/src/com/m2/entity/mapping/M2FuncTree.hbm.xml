<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.m2.entity"  schema="m2">
  <class name="FuncTree" table="M2_FUNC_TREE">
    <id name="id" column="ID" type="java.lang.Integer">
      <generator class="native"></generator>
    </id>
    <property name="parentId" column="PARENT_ID" type="java.lang.Integer" />
    <property name="layer" column="LAYER" type="java.lang.Integer"/>
    <property name="name" column="NAME" type="java.lang.String" length="20"/>
    <property name="sort" column="SORT" type="java.lang.Integer"/>
    <property name="description" column="DESCRIPTION" type="java.lang.String" length="100"/> 
  </class>
</hibernate-mapping>