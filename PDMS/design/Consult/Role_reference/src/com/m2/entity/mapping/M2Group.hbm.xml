<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.m2.entity" schema="m2">
  <class name="Group" table="M2_GROUP" >
    <id name="id" column="ID" type="java.lang.Integer">
      <generator class="native"></generator>
    </id>
    <property name="name" column="NAME" type="java.lang.String" length="50"/>
    <property name="type" column="TYPE" type="java.lang.String" length="10"/>
    <property name="description" column="DESCRIPTION" type="java.lang.String" length="100"/>
    <set name="roles" table="M2_GROUP_ROLE" cascade="save-update" lazy="true" fetch="select">
      <key column="GROUP_ID"/>
      <many-to-many column="ROLE_ID" class="Role"/>
    </set>     
  </class>
</hibernate-mapping>