<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <form-beans>
    <form-bean name="fileActionForm" type="sshfile.web.FileActionForm" />
  </form-beans>
  <action-mappings>
    <action name="fileActionForm" parameter="method" path="/fileAction" type="sshfile.web.FileAction">
      <forward name="fileList" path="/file-list.jsp" />
      <forward name="forward" path="/fileAction.do?method=listAllFile" />
    </action>
  </action-mappings>
  <message-resources parameter="ApplicationResources" />
</struts-config>

